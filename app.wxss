/**app.wxss**/
page{
  background: #fff;
  padding-bottom: 100rpx;
  font-family:tahoma,arial,"microsoft yahei";
  text-shadow: 1rpx 1rpx 1rpx #eee;  
  font-size: 30rpx;
}
.header{
  background: #000;
    padding: 40rpx 0 10rpx 60rpx;
    border-bottom: 1rpx solid #999;
    box-shadow: 0 1rpx 1rpx #fff;
    width: 100%;
    margin-bottom: 10rpx;
    color: #fff;
}
.header .title{
    font-size: 60rpx;
    margin-right: 10rpx;
}
.header .sub-title{
  font-size: 32rpx;
}
.header .userinfo-avatar{
  display: inline-block;
  position: absolute;
  top: 5rpx;
  right: 20rpx;  
  height: 50rpx;
  width: 50rpx;
}

.header .add-btn{
    float:right;
    height: 24rpx;
    width:24rpx;
    border: 1rpx solid #777;
    position:  absolute;
    top:10rpx;
    right:20rpx;
    text-align: center;
    line-height: 22rpx;
    border-radius: 50%;
    font-size: 24rpx;
    color: #777;
    box-shadow: 1rpx 1rpx 1rpx #fff;
}
.nav{
  background: #000;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  /* border-top:2rpx solid #fff; */
  /* box-shadow: 0 0 15rpx #ccc; */
}
.nav .row{
  background: #000;
  display: inline-block;
  width: 25%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  box-shadow: -2rpx 0 0 #fff;
  /* margin-right:1%; */
  text-shadow: 1rpx 1rpx 1rpx #000;
}
.nav text.row{
  color: #333;
  /* border-bottom: 5rpx solid #fff; */
  background: #fff;
}

.nav-white,
.nav-white text.row,
.nav-white .row{
  background: #fff;
  color: #333;
}
.nav-white .row{
  box-shadow: -2rpx 0 0 #ccc;
}
.nav-orange,
.nav-orange text.row,
.nav-orange .row
{
  background: #ffc273;
}
.nav-buy,
.nav-buy text.row,
.nav-buy .row{
  /* background: #f76a37; */
  background: #fff;
  box-shadow: none;
  color: #333;
  text-shadow: 1rpx 1rpx 1rpx #eee;
}
.nav-buy .row{
  width: auto;
  padding: 0 30rpx;
}
.nav-buy .cart,
.nav-buy .buy{
  float: right;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-shadow: 1rpx 1rpx 1rpx #333;
}
.nav-buy .cart{
  background: #FF9402;
}
.nav-buy .buy{
  background: #FE560A;
}
.container {
  height: 100%;
  display:block;
  align-items:center;    
  /* text-shadow: 1rpx 1rpx 1rpx #666;  */
} 
.view-list{
  clear: both;
  font-size: 30rpx;
  margin: 10rpx 20rpx;
}
.view-list .bar{
  border-bottom: 1rpx solid #999; 
  text-align: left;
  height: 40rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  padding:20rpx 30rpx;
  overflow: hidden;
}
.view-list .bar text{
  float: right;
  font-size: 32rpx;
  padding: 0 20rpx;
}
.view-list .list{
   border-top:1rpx solid #eee; 
  padding: 20rpx 0;
}
.view-list .list .row{
  line-height: 50rpx;
  margin: 0 10rpx;
  padding:20rpx 30rpx;
  border-bottom: 1rpx dotted #bbb;
}
.view-list .list .row navigator{
  display: inline-block;
}
.view-list .list-p{
  border-top:1rpx solid #eee; 
  padding: 10rpx 0;
}
.view-list .list-p .row{
  line-height: 30rpx;
  margin: 0 10rpx;
  padding:20rpx 30rpx;
  border-bottom: 1rpx dotted #bbb;
}
.view-list .list-p .row icon{
  margin-right: 10rpx;
  float: left;
}
.view-list .list-p .row navigator{
  display: inline-block;
}
 .view-list .list-p .category{
  /* float: right; */
  margin-left: 10rpx;
} 
 .view-list .list-p .price{
  float: right; 
} 
.view-list .list-p .row .title{
  display: block;
}

.view-list .list-t{
  border-top:1rpx solid #eee; 
  padding: 10rpx 20rpx;
  line-height: 50rpx;
}
.view-list .list-t .row{
  clear: both;
  display: block;
  background: #f5f5f5;
  border: 1rpx solid #eee;
  height: 200rpx; 
  margin: 15rpx 0;
  padding: 10rpx;
}
.view-list .list-t .title,
.view-list .list-t .text{
  display: block;
  height: 50rpx;
  overflow: hidden
}
.view-list .list-t .title{
  margin-top: 20rpx;
}
.view-list .list-t  image{
  width: 200rpx; 
  height: 200rpx; 
  margin-right: 30rpx;
  background-color: #eee;
  float: left;
}
.view-list .list-t .price{
  display: block;
}
 .view-list .list-t .category{
  display: inline-block;
  margin-right: 10rpx;
} 

.view-list .list-n{
  border-top:1rpx solid #eee; 
  padding: 10rpx 5rpx;
  line-height: 50rpx;
  text-align: center;
}
.view-list .list-n .row{
  float: left;
  display: inline-block;
  background: #f5f5f5;
  border: 1rpx solid #eee;
  height: 480rpx; 
  width: 300rpx;
  margin: 15rpx 12rpx;
  padding: 10rpx;
  text-align: left;
}
.view-list .list-n .text{
  display: block;
  /* font-size: 16px; */
  height: 50rpx;
  overflow: hidden;
}
.view-list .list-n  image{
  width: 300rpx; 
  height: 300rpx; 
  margin: 0 auto 10rpx;
  background-color: #eee;
}
.view-list .list-n .price{
  display: block;
}
 .view-list .list-n .category{
  display: inline-block;
  margin-right: 10rpx;
} 
.tip{
  /* color:#FFE1AA; */
  color:#c82829;
  font-size: 14rpx;
  display: block;
  margin-bottom: 10rpx;
}
input,textarea,select{
  margin: 5rpx auto;
  background: #fff;
  font-size: 14rpx;
  padding: 2rpx 10rpx;
  border: 1rpx solid #666;
  text-shadow: 1rpx 1rpx 1rpx #ccc;
  width: 90%;
}
button{
  background: #819EC1;
  color:#fff;
}
button.red{
  background: #DE3C0C;
  color:#fff;
}
.hr{
  border-bottom:1rpx solid #999; 
  margin: 15rpx 0;
  box-shadow: 0 1rpx 1rpx #fff;
}