@import "../../wxParse/wxParse.wxss";
swiper {
display:block;
height:500rpx;
width:100%;
margin: 0 auto;
}
swiper-item{
  text-align: center;
  background: #333;
}
swiper image {
width: 100%;
height:100%;
display:inline-block;
overflow:hidden;
}
page{
 background: #eee; 
}
.detail .info{
  padding: 15rpx 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
}
.detail .info .item{
  display: block;
  padding:10rpx;
}
.detail .info .category{
  display: inline-block;
  padding: 0;
  margin-right: 20rpx;
}
.detail .title{
  font-size: 36rpx;
}
.detail .price{
  font-size: 48rpx;
  color: #ff6600;
  margin-right: 30rpx;
}

.detail .block{
  width: 100%;
  min-height: 200rpx;
  background: #fff;
}
.detail .block .bar{
  background: #f5f5f5;
  padding: 20rpx;
  border-left:10rpx solid #fcc782;
}
.detail .block .main{
  padding: 15rpx 20rpx;
  overflow: visible;
}
.detail .block .main image{
  width: 100%;
  display: block;
}
.detail .block .main .html{
  padding: 20rpx 0;
  line-height:1.5rem;
}
.f-right{
  float: right;
}