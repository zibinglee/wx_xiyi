<view class='nav'>
<block wx:for="{{nav}}" wx:key="a" wx:for-item="vo">
  <block wx:if="{{vo.url != route}}">
    <navigator open-type="redirect" class="row" url="{{vo.url}}" hover-class="none">{{vo.text}}</navigator>
  </block>
  <block wx:else>
    <text class="row">{{vo.text}}</text>
  </block>
</block>
