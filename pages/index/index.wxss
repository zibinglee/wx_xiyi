/**index.wxss**/
@import "../../wxParse/wxParse.wxss";
.user-avatar {
  width: 40px;
  height: 40px;
  margin-top: 10px;
  margin-right: 50px;
  border-radius: 50%; 
  float: right;
}

.userinfo-nickname {
  color: blue;
}

.usermotto {
  margin-top: 200px;
}
.user-motto{
  font-size: 15px;
  color: #ff6600;
}

.swiper {
  width: 90%;
  margin: 0 auto;
  height: 160px;
  overflow: hidden;
  background: #fff;
  border: 2px solid #fff;  
  box-shadow: 0 0 2px #333;
}
.swiper image {
  height: 100%;
  width: 100%;
  opacity: 0.7;
}
.recommend{
  padding: 20rpx;
}
.rec-time{
  padding: 10rpx 0;
  display: block;
  font-size: 18rpx;
}
.rec-date{
  color: #999;
  display: block;
}
.rec-week{
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.rec-item{
  background: #f1f1f1;
  border-radius: 25rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.rec-item image{
  width: 100%;
  display:block;
}
.pro-text,
.pro-list{
  padding: 30rpx;
  line-height: 60rpx;
}
.pro-text .wxParse-p{
  text-indent: 2em;
}
.pro-list navigator{
  display: inline-block;
  color: #4769c7;
}
.wxParse-img{
  height: 400rpx;
}
.pro-detail{
  line-height: 60rpx;
}