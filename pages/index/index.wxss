/**index.wxss**/

.view-list .list-p{
  border-top:1rpx solid #eee; 
  padding: 10rpx 0;
}
.view-list .list-p .row{
  line-height: 30rpx;
  margin: 0 10rpx;
  padding:20rpx 30rpx;
  border-bottom: 1rpx dotted #bbb;
}
.view-list .list-p .row icon{
  margin-right: 10rpx;
  float: left;
}
.view-list .list-p .row navigator{
  display: inline-block;
}
 .view-list .list-p .category{
  /* float: right; */
  margin-left: 10rpx;
} 
 .view-list .list-p .price{
  float: right; 
} 
.view-list .list-p .row .title{
  display: block;
}

.view-list .list-t{
  border-top:1rpx solid #eee; 
  padding: 10rpx 20rpx;
  line-height: 50rpx;
}
.view-list .list-t .row{
  clear: both;
  display: block;
  background: #f5f5f5;
  border: 1rpx solid #eee;
  height: 200rpx; 
  margin: 15rpx 0;
  padding: 10rpx;
}
.view-list .list-t .title{
  font-size: 18px;
  margin-top: 20rpx;
}
.view-list .list-t  image{
  width: 200rpx; 
  height: 200rpx; 
  margin-right: 30rpx;
  background-color: #eee;
  float: left;
}
.view-list .list-t .price{
  display: block;
}
 .view-list .list-t .category{
  display: inline-block;
  margin-right: 10rpx;
} 

.view-list .list-n{
  border-top:1rpx solid #eee; 
  padding: 10rpx 5rpx;
  line-height: 50rpx;
  text-align: center;
}
.view-list .list-n .row{
  float: left;
  display: inline-block;
  background: #f5f5f5;
  border: 1rpx solid #eee;
  height: 480rpx; 
  width: 300rpx;
  margin: 15rpx 12rpx;
  padding: 10rpx;
  text-align: left;
}
.view-list .list-n .title{
  display: block;
  font-size: 18px;
}
.view-list .list-n  image{
  width: 300rpx; 
  height: 300rpx; 
  margin: 0 auto 10rpx;
  background-color: #eee;
}
.view-list .list-n .price{
  display: block;
}
 .view-list .list-n .category{
  display: inline-block;
  margin-right: 10rpx;
} 

.user-avatar {
  width: 40px;
  height: 40px;
  margin-top: 10px;
  margin-right: 50px;
  border-radius: 50%; 
  float: right;
}

.userinfo-nickname {
  color: blue;
}

.usermotto {
  margin-top: 200px;
}
.user-motto{
  font-size: 15px;
  color: #ff6600;
}

.swiper {
  width: 90%;
  margin: 0 auto;
  height: 160px;
  overflow: hidden;
  background: #fff;
  border: 2px solid #fff;  
  box-shadow: 0 0 2px #333;
}
.swiper image {
  height: 100%;
  width: 100%;
  opacity: 0.7;
}
